!!!
%html{:lang => 'ja'}
  %head
    %meta{:charset => 'utf-8'}/
    %meta{:content => 'IE=Edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}/
    %meta{:content => 'width=device-width, initial-scale=1.0', :name => 'viewport'}/
    <!-- Use title if it's in the page YAML frontmatter -->
    %title
      = current_page.data.title || "Tech side of M3"
    %meta{:name => 'description', :content => current_page.data.description || 'エムスリー株式会社(M3)の技術的な取り組みについて紹介していきます。社内技術発表会の「M3 Tech Talk」を開催したり、GitHubなどでのオープンソースなどに積極的に貢献しています。' }
    %link{rel:'stylesheet', href:'//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css'}
    = stylesheet_link_tag 'all'
  %body
    %div.container
      %div.row
        %div.content
          %h2
            %a{href:'/', border:'0px'}
              %img{src: '/images/logo_small.png', border: 0}
            = tag :img, src: '/images/title.png', border: 0
          %p
            <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://m3dev.github.io#{current_page.url}" data-count="none" data-hashtags="m3dev">Tweet</a>
            <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
            <span class="fb-like" data-href="http://m3dev.github.io#{current_page.url}" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></span>
          %hr
          = yield
          %hr
          %footer
            Copyright &copy; M3, Inc. All Rights Reserved.

    // JavaScripts
    %script{type: 'text/javascript', src: '//code.jquery.com/jquery-1.11.1.min.js'}
    %script{type: 'text/javascript', src: '//netdna.bootstrapcdn.com/bootstrap/3.0.1/js/bootstrap.min.js'}
    = yield_content :javascripts

    // Facebook
    %div{id:"fb-root"}
    :javascript
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=658247244206928";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));

    // Twitter
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-2134223-44', 'm3dev.github.io');
      ga('send', 'pageview');
